<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Todo Login</title>
    <meta name="viewport" content="width=device-width, minimum-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
</head>
<body>
{% trans_default_domain 'FOSUserBundle' %}

<nav class="navbar navbar-default">
    <div class="container-fluid">
        <h3 class="text-center" style="color: #509e90;">Todo Login</h3>
    </div>
</nav>

<section style="padding-top: 100px; padding-left: 20px">

    <div class="container-fluid">
        <div class="container" style="width: 50%">

            <div class="row">
                <div class="col-lg-4" style="text-align: right;">
{#                    <figure>#}
{#                        <br><br><br><br><br>#}
{#                        <img width=185 src="{{ asset('images/Logo.png') }}" />#}
{#                    </figure>#}
                </div>
                <div class="col-lg-8" style="padding-top: 100px; padding-left:150px">
                    {% if error %}
                        <div class="well text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal">
                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        {% endif %}

                        <div class="form-group">
                            {#<label class="col-sm-2 control-label" for="username">{{ 'security.login.username'|trans }}</label>#}
                            <div class="col-sm-10">
                                <input class="form-control" placeholder="username" type="text" id="username" name="_username" value="{{ last_username }}" required="required" style="width: 250px"/>
                            </div>
                        </div>
                        <div class="form-group">
                            {#<label class="col-sm-2 control-label" for="password">{{ 'security.login.password'|trans }}</label>#}
                            <div class="col-sm-10">
                                <input class="form-control" type="password" placeholder="password" id="password" name="_password" required="required" style="width: 250px"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-10">
                                <div class="checkbox">
                                    <label for="remember_me">
                                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                                        {{ 'security.login.remember_me'|trans }}
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-10">
                                <input class="btn btn-default" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>


            <div class="row" style="padding-left: 700px">
                <div class="col-lg-4" >
                    <i><h4 style="font-family: sans-serif;">Administration</h4></i>
                </div>
            </div>
        </div>
    </div>
</section>
</body>
</html>
